{$assertions on}

type
  TPoint = record X, Y: Int32; end;

var
  P: TPoint;
  E: Extended;
begin
  WriteLn(100 if True else 200);
  WriteLn(100 if False else 200);

  P := [100, 100] if P = [] else [200, 200];
  Assert(P = [100, 100]);
  P := [100, 100] if P = [] else [200, 200];
  Assert(P = [200, 200]);

  E := 1.337 if True else 9000; // Assigning to a Integer isn't allowed.
  Assert(E = 1.337);
  E := 1.337 if False else 9000;
  Assert(E = 9000);
end;